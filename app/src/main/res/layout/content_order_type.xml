<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".OrderType"
    tools:showIn="@layout/activity_order_type">

    <TextView
        android:id="@+id/tvEat"
        android:text="Eat in"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDesc"
        android:text="have your meal within TCC premises"
        android:textSize="14sp"
        android:textColor="#9e9e9e"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEat"
        app:layout_constraintLeft_toLeftOf="@id/tvEat"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivCheckEat"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_check_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvEat"
        app:layout_constraintBottom_toBottomOf="@id/view1"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <View
        android:id="@+id/view1"
        android:background="@color/gray_background"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp" />




    <TextView
        android:id="@+id/tvTakeaway"
        android:text="Takeaway"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDesc2"
        android:text="get your meal delivered in takeaway containers"
        android:textSize="14sp"
        android:textColor="#9e9e9e"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTakeaway"
        app:layout_constraintLeft_toLeftOf="@id/tvEat"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivCheckTakeaway"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_check_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTakeaway"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <View
        android:id="@+id/view2"
        android:background="@color/gray_background"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp" />

</android.support.constraint.ConstraintLayout>