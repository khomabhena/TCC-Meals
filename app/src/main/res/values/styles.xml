<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="detailEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:background">@drawable/edit_text_background_2</item>
    </style>

    <style name="hints">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="categories">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>


    <style name="dots">
        <item name="android:text">:</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="orderNames">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>


    <style name="orderNames2">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="progressButtons">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
